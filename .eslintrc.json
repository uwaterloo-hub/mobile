{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-unused-vars": [
            "warn",
            {
                "varsIgnorePattern": "\\_"
            }
        ],
        "quotes": [
            "error",
            "double"
        ],
        "react/prop-types": [
            "off"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
